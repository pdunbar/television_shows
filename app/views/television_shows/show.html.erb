
<h3><%= @television_show.title %></h3>

<ul>
  <li>Network: <%= @television_show.network %></li>
  <li>Years: <%= @television_show.years %></li>
</ul>

<div>
  <%= @television_show.synopsis %>
</div>
<br/><br/><br/>

<%= form_for [@television_show, @character] do |f| %>

  <% if @character.errors.any? %>
    <ul>
      <% @character.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :actor %>
    <%= f.text_field :actor %>
  </div>

  <div>
    <%= f.label :character %>
    <%= f.text_field :character %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit 'Submit' %>
<% end %>

<ul>
<% @television_show.characters.each do |character| %>
  <li>Actor: <%= character.actor %></li>
  <li>Character: <%= character.character %></li>
  <li>Description: <%= character.description %></li>
  <%= link_to "Delete", character_path(character), :method => :delete %><br/>
  <% end %>
</ul>
